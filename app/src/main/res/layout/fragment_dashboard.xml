<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Dashboard">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_gravity="center"
		>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/status"
			android:layout_gravity="center"
			android:gravity="center"
			android:textSize="30sp"
			android:textStyle="bold"
			android:textColor="#A44DC0"
			/>

		<Switch
			android:layout_marginTop="50dp"
			android:layout_marginBottom="30dp"
			android:theme="@style/SCBSwitch"
			android:checked="true"
			android:backgroundTint="#0E97B3"
			android:gravity="end|bottom"
			android:layout_gravity="center"
			android:id="@+id/switchID"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>


		<LinearLayout
			android:layout_marginTop="20dp"
			android:weightSum="4"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			>

			<ImageView
				android:id="@+id/alertID"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:src="@drawable/alert_off"
				android:padding="6dp"/>
			<ImageView
				android:id="@+id/sleepID"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:src="@drawable/sleep_off"
				android:padding="6dp"/>

			<ImageView
				android:id="@+id/notificationID"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:src="@drawable/notification"
				android:padding="6dp"/>
			<ImageView
				android:id="@+id/micID"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:src="@drawable/mic_off"
				android:padding="6dp"/>





		</LinearLayout>
		<ImageView
			android:id="@+id/cleanID"
			android:layout_weight="1"
			android:layout_gravity="center_horizontal"
			android:layout_width="70dp"
			android:layout_height="0dp"
			android:src="@drawable/clean_now"
			android:padding="6dp"/>
	</LinearLayout>

</FrameLayout>